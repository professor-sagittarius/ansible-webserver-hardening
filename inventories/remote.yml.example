# Inventory for remote host deployment
# Usage: cp inventory_remote.yml.example inventory_remote.yml
#        ansible-playbook -i inventory_remote.yml playbook.yml --ask-vault-pass
#
# inventory_remote.yml is gitignored - edit your local copy, never commit it.

all:
  vars:
    ansible_user: root

    # SSH hardening (set to 'yes'/true for initial setup, 'no'/false for hardened)
    ssh_permit_root_login: 'no'
    ssh_password_authentication: false

  hosts:
    # Add your remote hosts here. Example:
    # server-01:
