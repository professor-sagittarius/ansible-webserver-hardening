# Inventory for localhost deployment
# Usage: cp inventory_localhost.yml.example inventory_localhost.yml
#        ansible-playbook -i inventory_localhost.yml playbook.yml --ask-vault-pass
#
# inventory_localhost.yml is gitignored - edit your local copy, never commit it.

all:
  hosts:
    localhost:
      ansible_connection: local
      ansible_python_interpreter: /usr/bin/python3

      users_group_list:
        - name: docker

      users_user_list:
        - name: admin
          groups:
            - sudo
            - docker
          password: "{{ admin_password | password_hash('sha512') }}"
          authorized_keys:
            - "ssh-ed25519 AAAA... your-key-here"
          expires: -1

      # Disk configuration
      resize_disk: true
      disk_device: "/dev/sda"
      partition_number: 1

      # SSH hardening
      ssh_permit_root_login: 'no'
      ssh_password_authentication: false

      # LAN CIDR for fail2ban ignore list (adjust to your network)
      # fail2ban_ignoreips: "127.0.0.1/8 ::1 192.168.1.0/24"
